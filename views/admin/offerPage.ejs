    <script>
        document.querySelectorAll('[id^="active-btn-"]').forEach(function (element) {
            element.addEventListener('click', function () {
                const offerId = this.id.split('-')[2]; // Extract the offer ID from the element ID
                const swalWithBootstrapButtons = Swal.mixin({
                    customClass: {
                        confirmButton: "btn btn-success",
                        cancelButton: "btn btn-danger"
                    },
                    buttonsStyling: false
                });
                swalWithBootstrapButtons.fire({
                    title: "Do you want to activate this offer?",
                    text: "",
                    icon: "question",
                    confirmButtonText: "Yes, activate it!",
                    cancelButtonText: "No, cancel!",
                    reverseButtons: true
                }).then((result) => {
                    if (result.isConfirmed) {
                        fetch('/admin/activateOffer', {
                            method: 'post',
                            headers: {
                                'Content-Type': 'application/json'
                            },
                            body: JSON.stringify({
                                id: offerId
                            })
                        }).then(response => response.json())
                          .then(data => {
                            if (data.activated) {
                                
                                swalWithBootstrapButtons.fire({
                                    title: "Activated!",
                                    text: "The offer has been activated.",
                                    icon: "success"
                                }).then(()=>{
                                    document.getElementById(`active-btn-${data.id}`).innerHTML = "<div class='badge badge-success'>Activated</div>"
                                })
                            } else if(!data.activated) {
                                swalWithBootstrapButtons.fire({
                                    title: "De-Activated!",
                                    text: "The offer has been de-activated.",
                                    icon: "success"
                                }).then(()=>{
                                    document.getElementById(`active-btn-${data.id}`).innerHTML = "<div class='badge badge-danger'>Deactivate</div>"

                                })
                            }
                        }).catch(error => {
                            swalWithBootstrapButtons.fire({
                                title: "Error!",
                                text: "There was a problem with the request.",
                                icon: "error"
                            });
                        });
                    } else if (result.dismiss === Swal.DismissReason.cancel) {
                        swalWithBootstrapButtons.fire({
                            title: "Cancelled",
                            text: "The offer activation was cancelled.",
                            icon: "error"
                        });
                    }
                });
            });
        });
    </script>
