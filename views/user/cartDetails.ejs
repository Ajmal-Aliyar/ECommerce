        orders.setAttribute('aria-selected', 'true');
        orders.click()

        function cancelOrder(productId, orderId, minAmount, totalPrice, productPrice) {
            console.log(productId, orderId, minAmount, totalPrice, productPrice);

            const showSuccessAlert = (refund) => {
                console.log(refund);
                if (refund > 0) {
                    Swal.fire({
                        title: "Cancelled!",
                        text: `Your order have been cancelled and ${refund} amount refund money will be added to the wallet within 3 business days.`,
                        icon: "success"
                    }).then(() => {
                        window.location.href = '/cartDetails?id=' + orderId;
                    });
                } else {
                    Swal.fire({
                        title: "Cancelled!",
                        text: "Your order have been cancelled.",
                        icon: "success"
                    }).then(() => {
                        window.location.href = '/cartDetails?id=' + orderId;
                    });
                }

            };

            const showErrorAlert = (message) => {
                Swal.fire({
                    title: "Error!",
                    text: message,
                    icon: "error"
                });
            };

            const handleResponse = (response) => {
                if (!response.ok) {
                    throw new Error(`HTTP error! status: ${response.status}`);
                }
                return response.json();
            };

            const cancelProduct = () => {
                Swal.fire({
                    title: "Are you sure?",
                    text: "Do you want to cancel the product?",
                    icon: "warning",
                    showCancelButton: true,
                    confirmButtonColor: "#C96",
                    cancelButtonColor: "#c0001",
                    confirmButtonText: "Yes, cancel order!"
                }).then((result) => {
                    if (result.isConfirmed) {
                        fetch('/cancelProduct', {
                            method: "POST",
                            headers: {
                                'Content-Type': 'application/json'
                            },
                            body: JSON.stringify({
                                productId, orderId, productPrice
                            })
                        })
                            .then(handleResponse)
                            .then(data => {
                                console.log('Order cancelled successfully:', data);
                                showSuccessAlert(data.refund);
                            })
                            .catch(error => {
                                console.error('Error cancelling order:', error.message);
                                showErrorAlert('There was an error cancelling your order.');
                            });
                    }
                });
            };

            const cancelProductAndCoupon = () => {
                Swal.fire({
                    title: "Are you sure?",
                    text: "Your total amount is less than the coupon minimum price! The coupon will be removed from the cart.",
                    icon: "warning",
                    showCancelButton: true,
                    confirmButtonColor: "#C96",
                    cancelButtonColor: "#c0001",
                    confirmButtonText: "Yes, cancel order!"
                }).then((result) => {
                    if (result.isConfirmed) {
                        fetch('/cancelProductandCoupon', {
                            method: "POST",
                            headers: {
                                'Content-Type': 'application/json'
                            },
                            body: JSON.stringify({
                                productId, orderId, productPrice
                            })
                        })
                            .then(handleResponse)
                            .then(data => {
                                console.log('Order cancelled successfully:', data);
                                showSuccessAlert(data.refund);
                            })
                            .catch(error => {
                                console.error('Error cancelling order:', error.message);
                                showErrorAlert('There was an error cancelling your order.');
                            });
                    }
                });
            };
            const cancelCart = () => {
                Swal.fire({
                    title: "Are you sure?",
                    text: "All products in the cart will be cancelled!",
                    icon: "warning",
                    showCancelButton: true,
                    confirmButtonColor: "#C96",
                    cancelButtonColor: "#c0001",
                    confirmButtonText: "Yes, cancel it!"
                }).then((result) => {
                    if (result.isConfirmed) {
                        const newStatus = 'cancelled';
                        fetch('/cancelOrder', {
                            method: 'POST',
                            headers: {
                                'Content-Type': 'application/json'
                            },
                            body: JSON.stringify({ orderId, newStatus })
                        })
                            .then(response => {
                                if (!response.ok) {
                                    throw new Error(`HTTP error! status: ${response.status}`);
                                }
                                return response.json();
                            })
                            .then(data => {
                                console.log('Order cancelled successfully:', data);
                                console.log(data.refund);
                                if (data.refund > 0) {
                                    Swal.fire({
                                        title: "Cancelled!",
                                        text: `Your order have been cancelled and ${data.refund} amount refund money will be added to the wallet within 3 business days.`,
                                        icon: "success"
                                    }).then(() => {
                                        window.location.href = '/orders' ;
                                    });
                                } else {
                                    Swal.fire({
                                        title: "Cancelled!",
                                        text: "Your orders have been cancelled.",
                                        icon: "success"
                                    }).then(() => {
                                        window.location.href = '/orders' ;
                                    });
                                }
                            })
                            .catch(error => {
                                console.error('Error cancelling order:', error.message);
                                Swal.fire({
                                    title: "Error!",
                                    text: "There was an error cancelling your orders.",
                                    icon: "error"
                                });
                            });
                    }
                });
            }
            if (totalPrice - productPrice === 0) {
                cancelCart()
            } else {
                if (minAmount <= (totalPrice - productPrice)) {
                    cancelProduct();
                } else {
                    cancelProductAndCoupon();
                }
            }




        }

    </script>
