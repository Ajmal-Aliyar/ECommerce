                                <div class="card-body ">
                                    <div>
                                        <h3 class="card-title">Order Summary</h3>
                                    </div>
                                    <div style="display: flex;">
                                        <div style=" color: black;margin-right: 1em;">
                                            Address:

                                        </div>
                                        <div style="width: 26em;">
                                            <%=orders[0].shippingAddress.firstName%>
                                                <%=orders[0].shippingAddress.lastName%> <br>
                                                    <%=orders[0].shippingAddress.address%>
                                                        <%=orders[0].shippingAddress.country%>
                                                            <%=orders[0].shippingAddress.state%>
                                                                <%=orders[0].shippingAddress.city%>
                                                                    <%=orders[0].shippingAddress.district%>
                                                                        <%=orders[0].shippingAddress.landMark%> <br>
                                                                            pin <%=orders[0].shippingAddress.pinCode%>

                                        </div>
                                    </div>
                                    <div style="display: flex;">
                                        <div style=" color: black;margin-right: 1em;">
                                            Mobile:

                                        </div>
                                        <div style="width: 26em;">
                                            <%=orders[0].shippingAddress.mobile%>
                                                <%=orders[0].shippingAddress.mobile2%>
                                        </div>
                                    </div>
                                    <div style="display: flex;">
                                        <div style=" color: black;margin-right: 1em;">
                                            Status:

                                        </div>
                                        <div style="width: 26em;">
                                            <%=orders[0].status%>
                                        </div>
                                    </div>
                                    <div style="display: flex;">
                                        <div style=" color: black;margin-right: 1em;">
                                            Payment:

                                        </div>
                                        <div style="width: 26em;">
                                            <%=orders[0].payment.paymentMethod%>
                                        </div>
                                    </div>
                                    <div style="display: flex;">
                                        <div style="color: black; margin-right: 1em;">
                                            Ordered day:
                                        </div>
                                        <div style="width: 26em;" id="order-date"></div>
                                    </div>

                                    <div style="display: flex;">
                                        <div style="color: black; margin-right: 1em;">
                                            Expected on:
                                        </div>
                                        <div style="width: 26em;color: rgba(9, 144, 13, 0.714);" id="expectedDate">
                                        </div>
                                    </div>

                                    <script>
                                        function formatDate(createdAt) {
                                            const date = new Date(createdAt);
                                            const options = { weekday: 'long', year: 'numeric', month: 'long', day: 'numeric' };
                                            return date.toLocaleDateString(undefined, options);
                                        }

                                        document.getElementById('order-date').innerText = formatDate('<%=orders[0].createdAt%>');
                                        document.getElementById('expectedDate').innerText = formatDate('<%=orders[0].expectedDelivery%>');
                                    </script>

                                    <div style="display: flex;">
                                        <div style=" color: black;margin-right: 1em;">
                                            Amount :

                                        </div>
                                        <div style="width: 26em;color: #695c17;">
                                            <%=orders[0].grandTotalPrice%>
                                        </div>
                                    </div>

                                </div><!-- End .card-body -->

                            </div><!-- End .card-dashboard -->
                        </div><!-- End .col-lg-6 -->
            </div>
        </div>
